@model Store.Core.Models.Pencil
@{
    ViewBag.Title = "Index";

}
<div class="container">
   <a href="/">Back</a>  <h1>Product Page for @Model.Title</h1>
   
    <div class="row">
        <div class="col-lg-6 ">
            <img src="~/@Model.ImagePath" />
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">

        
            <h2> $@Model.Price</h2> <span>Qty:<input value="0" type="number" step="1" /></span>
            <h2> @Model.Description</h2>

            <button class="btn btn-primary btn-large">Order</button>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/ViewModel/PencilVM.js")
}
